@using System.Linq;
@model Book



  <main class="container my-4">
    <div class="row">
      <div class="col-md-6">
        <img src="@Model.image_link" class="img-fluid mb-3" alt="Book Cover">
      </div>
      <div class="col-md-6">
        <h1 class="mb-3">@Model.Name</h1>
        <h2 class="mb-3"> @Model.Author.Name.ToString()</h2>
        <p class="lead mb-3">@Model.Description_facts</p>
        <p class="mb-3">Артикль: @Model.ID</p>
        <p class="mb-3">Жанр: @Model.Tag</p>
        <p class="mb-3">Дата публикации: @Model.Year_public</p>
        <p class="mb-3">API Литресс: @Model.litres_id</p>
        <button class="btn btn-dark mb-3">Купить сейчас</button>
        <div class="mb-3">
          <h4>Описание</h4>
          <p>@Model.Description</p>
        </div>
      </div>
    </div>

   

    <div class="mb-4">
      <h2>Book Details</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td><strong>Язык</strong></td>
            <td>Русский</td>
          </tr>
          <tr>
            <td><strong>Dimensions</strong></td>
            <td>6 x 9 in</td>
          </tr>
          <tr>
            <td><strong>Weight</strong></td>
            <td>1 lb</td>
          </tr>
        </tbody>
      </table>
    </div>

  <div class="mb-4">
    <h2>Отзывы</h2>
    
    <div class="d-flex flex-column my-3">
  @foreach (var item in Model.Reviews)
  {
    <div class="card my-3">
      <div class="card-body">
        <h5 class="card-title">@item.Name_rew</h5>
        <p class="card-text">@item.rew</p>
      </div>
    </div>
  }
</div>



        
      
  </div>

  </main>






